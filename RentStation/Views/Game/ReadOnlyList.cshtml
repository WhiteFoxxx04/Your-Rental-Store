@model IEnumerable<RentStation.Models.Game>
@{
    ViewBag.Title = "Games";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Games</h2>
<table id="games"  class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Game</th>
        <th>Category</th>
    </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
<script>
    $(document).ready(function () {
        var table = $("#games").DataTable({
            ajax: {
                url: "/api/game",
                dataSrc: ""
            },
            columns: [
                {
                    data: "name",
                },
                {
                    data: "category.name"
                }
            ]
        });
    });
</script>
}